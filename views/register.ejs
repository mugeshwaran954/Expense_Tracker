<%- include('partials/header') %>

<div class="card shadow-lg p-4 p-md-5 auth-card">
  <h2 class="text-center text-primary mb-4">Create Account</h2>

  <form action="/register" method="POST">
    <div class="mb-3">
      <label class="form-label">Username</label>
      <input class="form-control" type="text" name="username" placeholder="Enter your username" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Email</label>
      <input class="form-control" type="email" name="email" placeholder="Enter your email" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Password</label>
      <input class="form-control" type="password" name="password" placeholder="Enter password" required>
    </div>
    
    <div class="mb-3">
      <label class="form-label">Monthly Spending Limit ($)</label>
      <input class="form-control" type="number" step="10" name="spending_limit" placeholder="e.g., 1000" required>
    </div>
    
    <button class="btn btn-primary w-100 btn-lg mt-3">
      <i class="fas fa-user-plus me-2"></i>Register
    </button>
    <p class="text-center mt-4">Already have an account? <a href="/login">Login</a></p>
  </form>
</div>

<%- include('partials/footer') %>
</html>
