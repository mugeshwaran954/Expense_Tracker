<%- include('partials/header') %>

<div class="row justify-content-center">
  <div class="col-lg-7">
    <div class="card shadow-lg">
      <div class="card-header">
        <i class="fas fa-plus-circle me-2"></i>Add New Expense
      </div>
      <div class="card-body p-4">
        <form action="/expenses/add" method="POST">
          <div class="mb-3">
            <label class="form-label">Category</label>
            <select name="category" class="form-select" required>
              <option value="" disabled selected>Select Category</option>
              <option>Food</option>
              <option>Travel</option>
              <option>Bills</option>
              <option>Shopping</option>
              <option>Entertainment</option>
              <option>Others</option>
            </select>
          </div>
          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label">Amount ($)</label>
              <input class="form-control" type="number" step="0.01" name="amount" placeholder="0.00" required>
            </div>
            <div class="col-md-6 mb-3">
              <label class="form-label">Date</label>
              <input class="form-control" type="date" name="date" required>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label">Description (Optional)</label>
            <textarea class="form-control" name="description" placeholder="e.g., Lunch with client"></textarea>
          </div>
          <div class="d-grid gap-2">
            <button class="btn btn-primary btn-lg"><i class="fas fa-plus me-2"></i>Add Expense</button>
            <a href="/expenses/dashboard" class="btn btn-outline-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Dashboard</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
