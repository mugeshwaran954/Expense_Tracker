<%- include('partials/header') %>

<div class="card shadow-lg p-4 p-md-5 auth-card">
  <h2 class="text-center text-primary mb-4">Welcome Back!</h2>
  
  <form action="/login" method="POST">
    <div class="mb-3">
      <label for="email" class="form-label">Email:</label>
      <input type="email" class="form-control" id="email" name="email" required>
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password:</label>
      <input type="password" class="form-control" id="password" name="password" required>
    </div>
    <button class="btn btn-primary w-100 btn-lg mt-3">Login</button>
  </form>
  <p class="text-center mt-4">Don't have an account? <a href="/register">Register</a></p>
</div>

<%- include('partials/footer') %>